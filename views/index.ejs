<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
  <style>
    /* Embedded CSS Styles */
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
      background-color: #f8f9fa;
      line-height: 1.6;
      color: #2d3436;
    }

    h1 {
      text-align: center;
      color: #2c3e50;
      font-size: 2.5rem;
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 3px solid #3498db;
    }

    .post-form {
      background: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 2px 15px rgba(0,0,0,0.1);
      margin-bottom: 3rem;
    }

    .post-form h2 {
      color: #3498db;
      margin-top: 0;
      margin-bottom: 1.5rem;
    }

    input[type="text"], textarea {
      width: 100%;
      padding: 0.8rem;
      margin-bottom: 1rem;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    input[type="text"]:focus, textarea:focus {
      border-color: #3498db;
      box-shadow: 0 0 0 3px rgba(52,152,219,0.1);
      outline: none;
    }

    button {
      padding: 0.8rem 1.5rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    button[type="submit"] {
      background-color: #3498db;
      color: white;
    }

    button[type="submit"]:hover {
      background-color: #2980b9;
    }

    .post {
      background: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 2px 15px rgba(0,0,0,0.1);
      margin-bottom: 2rem;
      position: relative;
    }

    .post h2 {
      color: #2c3e50;
      margin-top: 0;
      margin-bottom: 0.8rem;
    }

    .post p {
      color: #636e72;
      margin-bottom: 1.2rem;
      font-size: 1.1rem;
      line-height: 1.8;
    }

    .post small {
      color: #95a5a6;
      font-size: 0.9rem;
      display: block;
      margin-bottom: 1rem;
    }

    .post-actions {
      display: flex;
      gap: 1rem;
      margin-top: 1.5rem;
    }

    .edit-btn {
      background-color: #2ecc71;
      color: white;
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: 4px;
    }

    .delete-btn {
      background-color: #e74c3c;
      color: white;
      border: none;
      padding: 0.5rem 1rem;
    }

    .no-posts {
      text-align: center;
      color: #95a5a6;
      font-style: italic;
      padding: 2rem;
      background: white;
      border-radius: 10px;
      box-shadow: 0 2px 15px rgba(0,0,0,0.1);
    }

    @media (max-width: 768px) {
      body {
        padding: 1rem;
      }
      
      .post-form {
        padding: 1.5rem;
      }
      
      .post {
        padding: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <h1>üìù My Blog</h1>

  <!-- Post Creation Form -->
  <form action="/posts" method="POST" class="post-form">
    <h2>Create New Post</h2>
    <input type="text" name="title" placeholder="Post Title" required>
    <textarea name="content" placeholder="Write your content here..." rows="6" required></textarea>
    <div style="text-align: right;">
      <button type="submit">Publish Post üöÄ</button>
    </div>
  </form>

  <!-- Posts List -->
  <% if (posts.length === 0) { %>
    <div class="no-posts">
      <p>No posts yet. Be the first to share your thoughts! ‚ú®</p>
    </div>
  <% } else { %>
    <% posts.forEach(post => { %>
      <div class="post">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <small>Posted on <%= post.createdAt.toDateString() %></small>
        <div class="post-actions">
          <a href="/posts/edit/<%= post._id %>" class="edit-btn">‚úèÔ∏è Edit</a>
          <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" class="delete-btn" 
                    onclick="return confirm('Are you sure you want to delete this post?');">
              üóëÔ∏è Delete
            </button>
          </form>
        </div>
      </div>
    <% }) %>
  <% } %>
</body>
</html>